    <script>
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è Telegram Web App
        const tg = window.Telegram.WebApp;
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è
        function initApp() {
            tg.ready();
            tg.expand();
            tg.setHeaderColor('#667eea');
            tg.setBackgroundColor('#667eea');
            
            console.log('Web App –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä–æ–≤–∞–Ω');
            console.log('User:', tg.initDataUnsafe.user);
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –≤—Ä–µ–º–µ–Ω–∏
        function updateTime() {
            const now = new Date();
            const timeElements = document.querySelectorAll('#currentTime');
            timeElements.forEach(element => {
                element.textContent = now.toLocaleTimeString('ru-RU', { 
                    hour: '2-digit', 
                    minute: '2-digit' 
                });
            });
        }

        // –ù–∞–≤–∏–≥–∞—Ü–∏—è –ø–æ —ç–∫—Ä–∞–Ω–∞–º
        function showScreen(screenId) {
            // –°–∫—Ä—ã—Ç—å –≤—Å–µ —ç–∫—Ä–∞–Ω—ã
            document.querySelectorAll('.screen').forEach(screen => {
                screen.classList.remove('active');
            });
            
            // –ü–æ–∫–∞–∑–∞—Ç—å –≤—ã–±—Ä–∞–Ω–Ω—ã–π —ç–∫—Ä–∞–Ω
            document.getElementById(screenId).classList.add('active');
            
            // –û–±–Ω–æ–≤–∏—Ç—å –≤—Ä–µ–º—è –Ω–∞ –∞–∫—Ç–∏–≤–Ω–æ–º —ç–∫—Ä–∞–Ω–µ
            updateTime();
        }

        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –æ–ø–ª–∞—Ç—ã
        function handlePayment() {
            const paymentData = {
                action: 'payment_initiated',
                product: '–ë–û–¢ MINES',
                amount: 'negotiable',
                timestamp: new Date().toISOString(),
                user_id: tg.initDataUnsafe.user?.id,
                username: tg.initDataUnsafe.user?.username
            };
            
            // –í–∏–±—Ä–æ–æ—Ç–∫–ª–∏–∫
            if (tg.HapticFeedback) {
                tg.HapticFeedback.impactOccurred('soft');
            }
            
            // –û—Ç–ø—Ä–∞–≤–∫–∞ –¥–∞–Ω–Ω—ã—Ö –≤ –±–æ—Ç–∞
            tg.sendData(JSON.stringify(paymentData));
            
            // –õ–æ–∫–ª—å–Ω–æ–µ —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ
            tg.showPopup({
                title: '‚úÖ –ü–ª–∞—Ç–µ–∂ –∏–Ω–∏—Ü–∏–∏—Ä–æ–≤–∞–Ω',
                message: '–†–µ–∫–≤–∏–∑–∏—Ç—ã —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω—ã. –ü–æ—Å–ª–µ –æ–ø–ª–∞—Ç—ã –∑–∞–≥—Ä—É–∑–∏—Ç–µ —Å–∫—Ä–∏–Ω—à–æ—Ç —á–µ–∫–∞.',
                buttons: [{id: 'ok', type: 'default', text: 'OK'}]
            });
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ —Å–∫—Ä–∏–Ω—à–æ—Ç–∞
        function handleScreenshotUpload(event) {
            const file = event.target.files[0];
            if (file) {
                // –ü—Ä–æ–≤–µ—Ä–∫–∞ —Ä–∞–∑–º–µ—Ä–∞ —Ñ–∞–π–ª–∞ (–º–∞–∫—Å 5MB)
                if (file.size > 5 * 1024 * 1024) {
                    tg.showPopup({
                        title: '‚ùå –û—à–∏–±–∫–∞',
                        message: '–§–∞–π–ª —Å–ª–∏—à–∫–æ–º –±–æ–ª—å—à–æ–π. –ú–∞–∫—Å–∏–º–∞–ª—å–Ω—ã–π —Ä–∞–∑–º–µ—Ä: 5MB',
                        buttons: [{id: 'ok', type: 'default', text: 'OK'}]
                    });
                    return;
                }
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    const screenshotData = {
                        action: 'screenshot_uploaded',
                        filename: file.name,
                        file_size: file.size,
                        file_type: file.type,
                        timestamp: new Date().toISOString(),
                        user_id: tg.initDataUnsafe.user?.id,
                        username: tg.initDataUnsafe.user?.username
                    };
                    
                    // –í–∏–±—Ä–æ–æ—Ç–∫–ª–∏–∫
                    if (tg.HapticFeedback) {
                        tg.HapticFeedback.impactOccurred('medium');
                    }
                    
                    // –û—Ç–ø—Ä–∞–≤–∫–∞ –¥–∞–Ω–Ω—ã—Ö –≤ –±–æ—Ç–∞
                    tg.sendData(JSON.stringify(screenshotData));
                    
                    // –£–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
                    tg.showAlert('‚úÖ –°–∫—Ä–∏–Ω—à–æ—Ç –∑–∞–≥—Ä—É–∂–µ–Ω –∏ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω –≤ –ø–æ–¥–¥–µ—Ä–∂–∫—É. –û–∂–∏–¥–∞–π—Ç–µ –ø—Ä–æ–≤–µ—Ä–∫–∏.');
                    
                    // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏—Å—Ç–æ—Ä–∏–∏
                    updatePaymentHistory();
                };
                reader.readAsDataURL(file);
            }
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏—Å—Ç–æ—Ä–∏–∏ –ø–ª–∞—Ç–µ–∂–µ–π
        function updatePaymentHistory() {
            const historyItem = document.querySelector('.history-item');
            if (historyItem) {
                historyItem.innerHTML = `
                    <strong>–ë–û–¢ MINES</strong><br>
                    –°—Ç–∞—Ç—É—Å: –û–∂–∏–¥–∞–µ—Ç –ø—Ä–æ–≤–µ—Ä–∫–∏<br>
                    –í—Ä–µ–º—è: ${new Date().toLocaleTimeString('ru-RU')}
                `;
            }
        }

        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –æ–±—Ä–∞—Ç–Ω–æ–π —Å–≤—è–∑–∏ –æ—Ç Telegram
        tg.onEvent('viewportChanged', (event) => {
            console.log('Viewport changed:', event);
        });

        tg.onEvent('themeChanged', () => {
            console.log('Theme changed');
        });

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        document.addEventListener('DOMContentLoaded', function() {
            initApp();
            updateTime();
            setInterval(updateTime, 60000); // –û–±–Ω–æ–≤–ª—è—Ç—å –≤—Ä–µ–º—è –∫–∞–∂–¥—É—é –º–∏–Ω—É—Ç—É
            
            // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–µ –æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ –≤—Ä–µ–º–µ–Ω–∏ –ø—Ä–∏ —Å–º–µ–Ω–µ —ç–∫—Ä–∞–Ω–∞
            const observer = new MutationObserver(function(mutations) {
                mutations.forEach(function(mutation) {
                    if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
                        if (mutation.target.classList.contains('active')) {
                            updateTime();
                        }
                    }
                });
            });
            
            document.querySelectorAll('.screen').forEach(screen => {
                observer.observe(screen, { attributes: true });
            });
        });

        // –†–µ–∑–µ—Ä–≤–Ω–∞—è –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        setTimeout(() => {
            if (!tg.initData) {
                console.log('–†–µ–∑–µ—Ä–≤–Ω–∞—è –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è');
                updateTime();
            }
        }, 1000);
    </script>
</body>
</html>
