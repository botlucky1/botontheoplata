    <script>
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è Telegram Web App
        Telegram.WebApp.ready();
        Telegram.WebApp.expand();
        
        // –ü–æ–ª—É—á–∞–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ
        const user = Telegram.WebApp.initDataUnsafe.user;
        if (user) {
            document.getElementById('user-id').textContent = user.id;
            console.log('–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å:', user.first_name, 'ID:', user.id);
        }
        
        let timeLeft = 15 * 60; // 15 –º–∏–Ω—É—Ç
        let timerInterval;
        let selectedFile = null;
        
        // –ü–æ–∫–∞–∑–∞—Ç—å –¥–µ—Ç–∞–ª–∏ –æ–ø–ª–∞—Ç—ã
        function showPaymentDetails() {
            document.getElementById('main-section').classList.add('hidden');
            document.getElementById('payment-section').classList.remove('hidden');
            document.getElementById('success-section').classList.add('hidden');
            document.getElementById('payment-status').textContent = '–û–∂–∏–¥–∞–µ–º –æ–ø–ª–∞—Ç—É...';
            
            // –ó–∞–ø—É—Å–∫ —Ç–∞–π–º–µ—Ä–∞
            startTimer();
        }
        
        // –ó–∞–ø—É—Å–∫ —Ç–∞–π–º–µ—Ä–∞
        function startTimer() {
            timeLeft = 15 * 60;
            clearInterval(timerInterval);
            
            timerInterval = setInterval(function() {
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                document.getElementById('countdown').textContent = 
                    `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                
                if (timeLeft <= 0) {
                    clearInterval(timerInterval);
                    document.getElementById('payment-status').textContent = '‚è∞ –í—Ä–µ–º—è –≤—ã—à–ª–æ!';
                    document.getElementById('payment-status').style.color = '#ff6b6b';
                } else {
                    timeLeft--;
                }
            }, 1000);
        }
        
        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –≤—ã–±–æ—Ä–∞ —Ñ–∞–π–ª–∞
        function handleFileSelect(input) {
            if (input.files && input.files[0]) {
                selectedFile = input.files[0];
                document.getElementById('file-name').textContent = `–í—ã–±—Ä–∞–Ω: ${selectedFile.name}`;
                document.getElementById('payment-status').textContent = '–§–∞–π–ª –≥–æ—Ç–æ–≤ –∫ –æ—Ç–ø—Ä–∞–≤–∫–µ';
            }
        }
        
        // –û—Ç–ø—Ä–∞–≤–∫–∞ –∞–¥–º–∏–Ω—É
        function sendToAdmin() {
            if (!selectedFile) {
                alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤—ã–±–µ—Ä–∏—Ç–µ —Å–∫—Ä–∏–Ω—à–æ—Ç —á–µ–∫–∞');
                return;
            }
            
            document.getElementById('payment-status').textContent = '–û—Ç–ø—Ä–∞–≤–ª—è–µ–º —á–µ–∫ –∞–¥–º–∏–Ω—É...';
            
            // –ò–º–∏—Ç–∞—Ü–∏—è –æ—Ç–ø—Ä–∞–≤–∫–∏
            setTimeout(function() {
                document.getElementById('payment-section').classList.add('hidden');
                document.getElementById('success-section').classList.remove('hidden');
                document.getElementById('payment-status').textContent = '–ß–µ–∫ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω! –û–∂–∏–¥–∞–π—Ç–µ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è';
                document.getElementById('payment-status').style.color = '#00e676';
                
                clearInterval(timerInterval);
            }, 2000);
        }
        
        // –ö–æ–ø–∏—Ä–æ–≤–∞–Ω–∏–µ –≤ –±—É—Ñ–µ—Ä –æ–±–º–µ–Ω–∞
        function copyToClipboard(elementId) {
            const text = document.getElementById(elementId).textContent;
            navigator.clipboard.writeText(text).then(function() {
                alert('–°–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–æ: ' + text);
            });
        }
        
        // –°–≤—è–∑—å —Å –ø–æ–¥–¥–µ—Ä–∂–∫–æ–π
        function contactSupport() {
            const supportUsername = '–≤–∞—à–∞_–ø–æ–¥–¥–µ—Ä–∂–∫–∞'; // –ó–∞–º–µ–Ω–∏—Ç–µ –Ω–∞ —Ä–µ–∞–ª—å–Ω—ã–π username
            window.open(`https://t.me/${supportUsername}`, '_blank');
        }
        
        // –ó–∞–∫—Ä—ã—Ç—å –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ
        function closeApp() {
            Telegram.WebApp.close();
        }
    </script>
